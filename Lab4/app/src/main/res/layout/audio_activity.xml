<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".AudioActivity">
    <LinearLayout
        android:id="@+id/LLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/StartHttpB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClickStart"
            android:text="Запустити з інтернету"
            android:textSize="12sp"></Button>

        <Button
            android:id="@+id/StartB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClickStart"
            android:text="Запустити"
            android:textSize="12sp"></Button>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/LLayout"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/PauseB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="Пауза"
            android:textSize="12sp"></Button>

        <Button
            android:id="@+id/ResumeB"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="Продовжити"
            android:textSize="12sp" />

        <Button
            android:id="@+id/StopB"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="Зупинити"
            android:textSize="12sp"></Button>

        <CheckBox
            android:id="@+id/Loop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Повтор"></CheckBox>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/LLayout1"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/BackwardB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="Назад"
            android:textSize="12sp"></Button>

        <Button
            android:id="@+id/ForwardB"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="Вперед"
            android:textSize="12sp"></Button>
    </LinearLayout>
</RelativeLayout>